{
    "manifest_version": 3,
    "name": "Snakes Website Cloner",
    "description": "Download the current web page as HTML.",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["activeTab", "downloads", "scripting"],
    "host_permissions": ["<all_urls>"]
  }
  